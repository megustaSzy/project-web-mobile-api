generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL")
}

model tb_user {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String?
  notelp   String?
  role     Role    @default(User)
  avatar   String?

  provider   String? @default("local")
  providerId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accessTokens  tb_accessToken[]
  refreshTokens tb_refreshToken[]
  orders        tb_orders[]
  testimoni     tb_testimoni[]
}

enum Role {
  Admin
  User
}

model tb_accessToken {
  id        Int      @id @default(autoincrement())
  token     String
  tokenId   String?  @unique
  user      tb_user  @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model tb_refreshToken {
  id        Int      @id @default(autoincrement())
  token     String
  tokenId   String?  @unique
  user      tb_user  @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model tb_destinations {
  id          Int    @id @default(autoincrement())
  name        String
  // location    String      
  imageUrl    String
  description String
  price       Int

  categoryId Int
  category   tb_category @relation(fields: [categoryId], references: [id])
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  schedules tb_schedules[]
}

model tb_pickup_locations {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  schedules tb_schedules[]
}

model tb_schedules {
  id               Int                 @id @default(autoincrement())
  pickupLocation   tb_pickup_locations @relation(fields: [pickupLocationId], references: [id])
  pickupLocationId Int
  destination      tb_destinations     @relation(fields: [destinationId], references: [id])
  destinationId    Int
  time             String
  date             DateTime
  createdAt        DateTime            @default(now())
  updatedAt        DateTime            @updatedAt
  orders           tb_orders[]
}

enum PaymentStatus {
  pending
  paid
  failed
  expired
}

enum PaymentMethod {
  qris
  bank_transfer
  gopay
  gopay_merchant
  credit_card
  ewallet
}

model tb_orders {
  id Int @id @default(autoincrement())

  // Relasi
  user       tb_user      @relation(fields: [userId], references: [id])
  userId     Int
  schedule   tb_schedules @relation(fields: [scheduleId], references: [id])
  scheduleId Int

  // Order info
  quantity   Int
  totalPrice Float

  // Snapshot field (diambil saat order)
  userName         String
  userPhone        String
  destinationName  String
  destinationPrice Float
  date             DateTime
  time             String

  // Tiket
  ticketCode String  @unique
  ticketUrl  String?

  // Payment
  isPaid          Boolean        @default(false)
  paymentStatus   PaymentStatus  @default(pending)
  paymentMethod   PaymentMethod?
  transactionId   String? // dari Midtrans
  snapToken       String? // token Snap
  snapRedirectUrl String? // URL pembayaran Snap
  paidAt          DateTime?

  // Timestamp
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt

  // Constraint unik supaya user tidak bisa pesan schedule sama 2x
  @@unique([userId, scheduleId])
}

model tb_category {
  id           Int               @id @default(autoincrement())
  name         String
  destinations tb_destinations[]
}

model tb_about {
  id        Int      @id @default(autoincrement())
  title     String?
  history   String
  vision    String
  mission   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model tb_otp {
  id        Int      @id @default(autoincrement())
  email     String
  otp       String
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model tb_values {
  id        Int      @id @default(autoincrement())
  header    String?
  name      String
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model tb_ourTeam {
  id       Int     @id @default(autoincrement())
  name     String
  job      String
  imageUrl String?
}

model tb_testimoni {
  id             Int             @id @default(autoincrement())
  user           tb_user         @relation(fields: [userId], references: [id])
  userId         Int
  status         String
  comment        String
  rating         Int?
  approvalStatus TestimoniStatus @default(PENDING)
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
}

model tb_banner {
  id        Int      @id @default(autoincrement())
  number    String
  header    String
  name      String
  imageUrl  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum TestimoniStatus {
  PENDING
  APPROVED
  REJECTED
}
