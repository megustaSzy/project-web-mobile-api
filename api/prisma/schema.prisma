generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model tb_user {
  id          Int         @id @default(autoincrement())
  name        String      
  email       String      @unique
  password    String?    
  notelp      String?
  role        Role        @default(User)

  provider    String?      @default("local")
  providerId  String?

  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  refreshTokens tb_refreshToken[]
  orders      tb_orders[]       
}

enum Role {
  Admin
  User
}

model tb_refreshToken {
  id          Int         @id @default(autoincrement())
  token       String
  tokenId     String?      @unique
  user        tb_user     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      Int
  expiresAt   DateTime   
  createdAt   DateTime    @default(now())    
}

model tb_destinations {
  id          Int         @id @default(autoincrement())
  name        String      
  // location    String      
  imageUrl    String
  description String 
  price       Int

  categoryId  Int
  category    tb_category      @relation(fields: [categoryId], references: [id])     
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt  

  schedules   tb_schedules[]
}

model tb_pickup_locations {
  id          Int       @id @default(autoincrement())
  name        String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  schedules   tb_schedules[]
}

model tb_schedules {
  id                        Int                   @id @default(autoincrement())
  pickupLocation            tb_pickup_locations   @relation(fields: [pickupLocationId], references: [id])
  pickupLocationId          Int
  destination               tb_destinations       @relation(fields: [destinationId], references: [id])
  destinationId             Int
  time                      String
  date                      DateTime
  createdAt                 DateTime              @default(now())
  updatedAt                 DateTime              @updatedAt
  orders      tb_orders[]
}

model tb_orders {
  id              Int              @id @default(autoincrement())
  user            tb_user          @relation(fields: [userId], references: [id])
  userId          Int

  schedule        tb_schedules     @relation(fields: [scheduleId], references: [id])
  scheduleId      Int

  tickets         Int
  totalPrice      Int

  // snapshot field (diambil saat melakukan order)
  userName        String
  userPhone       String
  destinationName String
  destinationPrice Int
  date            DateTime
  time            String

  createdAt       DateTime          @default(now())
}

model tb_category {
  id              Int               @id @default(autoincrement())
  name            String
  destinations    tb_destinations[]
}

model tb_about {
  id            Int           @id @default(autoincrement())
  history       String
  vision        String
  mission       String
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model tb_otp {
  id          Int           @id @default(autoincrement())
  email       String        @unique
  otp         String
  expiresAt   DateTime
  createdAt   DateTime      @default(now())
}