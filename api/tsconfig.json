{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "Node16",
    "rootDir": ".",               
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],

    "baseUrl": ".",              
    "paths": {                  
      "@/*": ["src/*"]
    },

    "ignoreDeprecations": "6.0"
  },
  "include": ["src/**/*.ts", "server.ts"]
}
